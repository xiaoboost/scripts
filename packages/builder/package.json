  "devDependencies": {
    "@scripts/tsconfig": "workspace:*",
    "@types/node": "^17.0.6",
    "@types/scripts": "workspace:*",
    "@types/yargs": "^17.0.8",
    "eslint": "^8.6.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  }
}
